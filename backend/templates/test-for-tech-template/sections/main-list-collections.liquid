<section class="main-list-collections" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="main-list-collections__header">
      <h1 class="main-list-collections__title h1">{{ section.settings.heading | default: 'Collections' }}</h1>
      {%- if section.settings.subheading != blank -%}
        <p class="main-list-collections__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}
    </div>

    <div class="main-list-collections__grid">
      {%- for collection in collections -%}
        {%- unless collection.handle == 'all' -%}
          <div class="collection-card">
            <a href="{{ collection.url }}" class="collection-card__link">
              <div class="collection-card__image-wrapper">
                {%- if collection.image != blank -%}
                  <img
                    src="{{ collection.image | image_url: width: 800 }}"
                    alt="{{ collection.image.alt | default: collection.title }}"
                    class="collection-card__image"
                    loading="lazy"
                    width="400"
                    height="300"
                  >
                {%- elsif collection.products.first and collection.products.first.featured_image != blank -%}
                  <img
                    src="{{ collection.products.first.featured_image | image_url: width: 800 }}"
                    alt="{{ collection.title }}"
                    class="collection-card__image"
                    loading="lazy"
                    width="400"
                    height="300"
                  >
                {%- else -%}
                  <div class="collection-card__placeholder">
                    {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}
                <div class="collection-card__overlay"></div>
              </div>
              <div class="collection-card__info">
                <h2 class="collection-card__title">{{ collection.title }}</h2>
                <p class="collection-card__count">{{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}</p>
              </div>
            </a>
          </div>
        {%- endunless -%}
      {%- else -%}
        <p class="main-list-collections__empty">No collections available.</p>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .main-list-collections {
    padding: var(--spacing-sections-mobile) 0;
  }

  @media screen and (min-width: 750px) {
    .main-list-collections {
      padding: var(--spacing-sections-desktop) 0;
    }
  }

  .main-list-collections__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .main-list-collections__title {
    margin: 0 0 0.5rem;
    font-size: clamp(2rem, 4vw, 3rem);
  }

  .main-list-collections__subheading {
    margin: 0;
    opacity: 0.7;
    max-width: 500px;
    margin: 0 auto;
  }

  .main-list-collections__grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  @media screen and (min-width: 750px) {
    .main-list-collections__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 990px) {
    .main-list-collections__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .collection-card {
    position: relative;
    overflow: hidden;
  }

  .collection-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .collection-card__image-wrapper {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
  }

  .collection-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .collection-card__link:hover .collection-card__image {
    transform: scale(1.05);
  }

  .collection-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(var(--color-base-text), 0.05);
  }

  .collection-card__placeholder svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .collection-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0) 50%);
  }

  .collection-card__info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    color: #fff;
    z-index: 1;
  }

  .collection-card__title {
    margin: 0 0 0.25rem;
    font-size: 1.25rem;
    font-weight: var(--font-heading-weight);
  }

  .collection-card__count {
    margin: 0;
    font-size: 0.875rem;
    opacity: 0.8;
  }

  .main-list-collections__empty {
    grid-column: 1 / -1;
    text-align: center;
    padding: 3rem;
    opacity: 0.7;
  }
</style>

{% schema %}
{
  "name": "Collections List",
  "tag": "section",
  "class": "section-main-list-collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Collections"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    }
  ]
}
{% endschema %}

