<section class="main-404" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="main-404__content">
      <h1 class="main-404__title">404</h1>
      <h2 class="main-404__heading">{{ section.settings.heading | default: 'Page not found' }}</h2>
      <p class="main-404__text">{{ section.settings.text | default: "Sorry, the page you're looking for doesn't exist or has been moved." }}</p>
      <a href="{{ routes.root_url }}" class="main-404__button button">
        {{ section.settings.button_text | default: 'Back to Home' }}
      </a>
    </div>
  </div>
</section>

<style>
  .main-404 {
    padding: var(--spacing-sections-mobile) 0;
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .main-404 {
      padding: var(--spacing-sections-desktop) 0;
    }
  }

  .main-404__content {
    text-align: center;
    max-width: 500px;
    margin: 0 auto;
  }

  .main-404__title {
    font-size: clamp(6rem, 15vw, 12rem);
    font-weight: var(--font-heading-weight);
    line-height: 1;
    margin: 0;
    opacity: 0.1;
  }

  .main-404__heading {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    margin: -2rem 0 1rem;
  }

  .main-404__text {
    margin: 0 0 2rem;
    opacity: 0.7;
  }
</style>

{% schema %}
{
  "name": "404 Page",
  "tag": "section",
  "class": "section-main-404",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Page not found"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Sorry, the page you're looking for doesn't exist or has been moved."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Back to Home"
    }
  ]
}
{% endschema %}

