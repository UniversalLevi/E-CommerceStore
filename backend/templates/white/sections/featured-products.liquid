{% comment %}
  Featured Products Section - Minimal Theme
  A clean grid layout for showcasing featured products
{% endcomment %}

<section class="featured-products-section" id="featured-{{ section.id }}">
  <div class="featured-container">
    {% if section.settings.heading != blank %}
      <div class="featured-header">
        {% if section.settings.subheading != blank %}
          <span class="featured-subheading">{{ section.settings.subheading }}</span>
        {% endif %}
        <h2 class="featured-heading">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}
    
    <div class="featured-grid">
      {% if section.settings.collection != blank %}
        {% assign products = collections[section.settings.collection].products %}
      {% else %}
        {% assign products = collections.all.products %}
      {% endif %}
      
      {% for product in products limit: section.settings.products_to_show %}
        <div class="product-card">
          <a href="{{ product.url }}" class="product-link">
            <div class="product-image-wrapper">
              {% if product.featured_image != blank %}
                <img 
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | default: product.title }}"
                  class="product-image"
                  loading="lazy"
                >
                {% if product.images[1] != blank and section.settings.show_second_image %}
                  <img 
                    src="{{ product.images[1] | image_url: width: 600 }}"
                    alt="{{ product.images[1].alt | default: product.title }}"
                    class="product-image product-image-hover"
                    loading="lazy"
                  >
                {% endif %}
              {% else %}
                <div class="product-image-placeholder">
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                    <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                    <polyline points="21,15 16,10 5,21"></polyline>
                  </svg>
                </div>
              {% endif %}
              
              {% if product.available == false %}
                <span class="product-badge product-badge-sold-out">Sold Out</span>
              {% elsif product.compare_at_price > product.price %}
                <span class="product-badge product-badge-sale">Sale</span>
              {% endif %}
            </div>
            
            <div class="product-info">
              <h3 class="product-title">{{ product.title }}</h3>
              <div class="product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="price-compare">{{ product.compare_at_price | money }}</span>
                {% endif %}
                <span class="price-current">{{ product.price | money }}</span>
              </div>
            </div>
          </a>
        </div>
      {% else %}
        {% for i in (1..section.settings.products_to_show) %}
          <div class="product-card product-card-placeholder">
            <div class="product-image-wrapper">
              <div class="product-image-placeholder">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                  <circle cx="8.5" cy="8.5" r="1.5"></circle>
                  <polyline points="21,15 16,10 5,21"></polyline>
                </svg>
              </div>
            </div>
            <div class="product-info">
              <h3 class="product-title">Sample Product {{ i }}</h3>
              <div class="product-price">
                <span class="price-current">$99.00</span>
              </div>
            </div>
          </div>
        {% endfor %}
      {% endfor %}
    </div>
    
    {% if section.settings.show_view_all %}
      <div class="featured-footer">
        <a href="{{ section.settings.collection.url | default: '/collections/all' }}" class="view-all-button">
          {{ section.settings.view_all_text | default: 'View All Products' }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  #featured-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
  
  #featured-{{ section.id }} .featured-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  #featured-{{ section.id }} .featured-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  #featured-{{ section.id }} .featured-subheading {
    display: block;
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: {{ section.settings.text_color }};
    opacity: 0.6;
    margin-bottom: 0.5rem;
  }
  
  #featured-{{ section.id }} .featured-heading {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    font-weight: 300;
    color: {{ section.settings.text_color }};
    margin: 0;
  }
  
  #featured-{{ section.id }} .featured-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
    gap: 2rem;
  }
  
  #featured-{{ section.id }} .product-card {
    position: relative;
  }
  
  #featured-{{ section.id }} .product-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  
  #featured-{{ section.id }} .product-image-wrapper {
    position: relative;
    aspect-ratio: {{ section.settings.image_ratio }};
    overflow: hidden;
    background-color: #f5f5f5;
  }
  
  #featured-{{ section.id }} .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }
  
  #featured-{{ section.id }} .product-image-hover {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
  }
  
  #featured-{{ section.id }} .product-card:hover .product-image-hover {
    opacity: 1;
  }
  
  #featured-{{ section.id }} .product-card:hover .product-image:not(.product-image-hover) {
    opacity: 0;
  }
  
  #featured-{{ section.id }} .product-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ccc;
  }
  
  #featured-{{ section.id }} .product-image-placeholder svg {
    width: 48px;
    height: 48px;
  }
  
  #featured-{{ section.id }} .product-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    padding: 0.25rem 0.75rem;
    font-size: 0.625rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    font-weight: 500;
  }
  
  #featured-{{ section.id }} .product-badge-sold-out {
    background-color: #1a1a1a;
    color: #fff;
  }
  
  #featured-{{ section.id }} .product-badge-sale {
    background-color: #dc2626;
    color: #fff;
  }
  
  #featured-{{ section.id }} .product-info {
    padding: 1rem 0;
    text-align: {{ section.settings.content_alignment }};
  }
  
  #featured-{{ section.id }} .product-title {
    font-size: 0.875rem;
    font-weight: 400;
    margin: 0 0 0.5rem 0;
    color: {{ section.settings.text_color }};
  }
  
  #featured-{{ section.id }} .product-price {
    font-size: 0.875rem;
    color: {{ section.settings.text_color }};
  }
  
  #featured-{{ section.id }} .price-compare {
    text-decoration: line-through;
    opacity: 0.5;
    margin-right: 0.5rem;
  }
  
  #featured-{{ section.id }} .featured-footer {
    text-align: center;
    margin-top: 3rem;
  }
  
  #featured-{{ section.id }} .view-all-button {
    display: inline-block;
    padding: 1rem 2rem;
    border: 1px solid {{ section.settings.text_color }};
    color: {{ section.settings.text_color }};
    text-decoration: none;
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: all 0.3s ease;
  }
  
  #featured-{{ section.id }} .view-all-button:hover {
    background-color: {{ section.settings.text_color }};
    color: {{ section.settings.background_color }};
  }
  
  @media (max-width: 1024px) {
    #featured-{{ section.id }} .featured-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    #featured-{{ section.id }} .featured-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
    
    #featured-{{ section.id }} .featured-container {
      padding: 0 1rem;
    }
  }
</style>

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "featured-products-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Our Collection"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "label": "Products to Show",
      "default": 4
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Columns",
      "default": 4
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image Ratio",
      "options": [
        { "value": "1/1", "label": "Square" },
        { "value": "3/4", "label": "Portrait" },
        { "value": "4/3", "label": "Landscape" }
      ],
      "default": "3/4"
    },
    {
      "type": "checkbox",
      "id": "show_second_image",
      "label": "Show Second Image on Hover",
      "default": true
    },
    {
      "type": "select",
      "id": "content_alignment",
      "label": "Content Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View All Button Text",
      "default": "View All Products"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Padding Top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 60
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#1a1a1a"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}

