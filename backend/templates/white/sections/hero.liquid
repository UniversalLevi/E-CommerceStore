{% comment %}
  Hero Section - Minimal Theme
  A clean, full-width hero banner with customizable content
{% endcomment %}

<section class="hero-section" id="hero-{{ section.id }}">
  <div class="hero-container">
    {% if section.settings.image != blank %}
      <div class="hero-image-wrapper">
        <img 
          src="{{ section.settings.image | image_url: width: 1920 }}"
          alt="{{ section.settings.image.alt | default: section.settings.heading }}"
          class="hero-image"
          loading="eager"
        >
        <div class="hero-overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
      </div>
    {% endif %}
    
    <div class="hero-content">
      {% if section.settings.subheading != blank %}
        <span class="hero-subheading">{{ section.settings.subheading }}</span>
      {% endif %}
      
      {% if section.settings.heading != blank %}
        <h1 class="hero-heading">{{ section.settings.heading }}</h1>
      {% endif %}
      
      {% if section.settings.text != blank %}
        <p class="hero-text">{{ section.settings.text }}</p>
      {% endif %}
      
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="hero-button">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

<style>
  #hero-{{ section.id }} {
    position: relative;
    min-height: {{ section.settings.section_height }}vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: {{ section.settings.background_color }};
  }
  
  #hero-{{ section.id }} .hero-container {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  #hero-{{ section.id }} .hero-image-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  
  #hero-{{ section.id }} .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  #hero-{{ section.id }} .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
  }
  
  #hero-{{ section.id }} .hero-content {
    position: relative;
    z-index: 2;
    text-align: {{ section.settings.text_alignment }};
    padding: 2rem;
    max-width: 800px;
  }
  
  #hero-{{ section.id }} .hero-subheading {
    display: block;
    font-size: 0.875rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: {{ section.settings.text_color }};
    margin-bottom: 1rem;
    opacity: 0.8;
  }
  
  #hero-{{ section.id }} .hero-heading {
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 300;
    line-height: 1.1;
    color: {{ section.settings.text_color }};
    margin: 0 0 1.5rem 0;
  }
  
  #hero-{{ section.id }} .hero-text {
    font-size: 1.125rem;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
    margin: 0 0 2rem 0;
    opacity: 0.9;
  }
  
  #hero-{{ section.id }} .hero-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    background-color: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    font-size: 0.875rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    border: 1px solid {{ section.settings.button_background }};
    transition: all 0.3s ease;
  }
  
  #hero-{{ section.id }} .hero-button:hover {
    background-color: transparent;
    color: {{ section.settings.button_background }};
  }
  
  @media (max-width: 768px) {
    #hero-{{ section.id }} .hero-content {
      padding: 1.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-section-wrapper",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 30
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Welcome to our store"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Minimal & Modern"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "Discover our curated collection of premium products designed for the modern lifestyle."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Section Height",
      "default": 80
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#1a1a1a"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button Background",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#1a1a1a"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

