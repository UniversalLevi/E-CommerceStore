      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Footer",
      "blocks": [
        {
          "type": "link_column",
          "settings": {
            "heading": "Shop"
          }
        },
        {
          "type": "link_column",
          "settings": {
            "heading": "Support"
          }
        }
      ]
    }
  ]
}
