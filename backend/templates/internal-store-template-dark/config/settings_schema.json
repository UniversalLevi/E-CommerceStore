[
  {
    "name": "theme_info",
    "theme_name": "Custom Theme",
    "theme_version": "1.0.0",
    "theme_author": "EAZY DROPSHIPPING",
    "theme_documentation_url": "https://help.shopify.com/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 120,
        "unit": "px",
        "label": "Logo width"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "colors_text",
        "label": "Text",
        "default": "#1a1a1a"
      },
      {
        "type": "color",
        "id": "colors_background_1",
        "label": "Background",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "colors_background_2",
        "label": "Background 2",
        "default": "#f5f5f5"
      },
      {
        "type": "color",
        "id": "colors_accent_1",
        "label": "Accent 1",
        "default": "#1a1a1a"
      },
      {
        "type": "color",
        "id": "colors_accent_2",
        "label": "Accent 2",
        "default": "#4a90d9"
      },
      {
        "type": "color",
        "id": "colors_solid_button_labels",
        "label": "Button text",
        "default": "#ffffff"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Heading font"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Body font"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1600,
        "step": 100,
        "default": 1400,
        "unit": "px",
        "label": "Page width"
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 5,
        "default": 50,
        "unit": "px",
        "label": "Section spacing"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube"
      },
      {
        "type": "text",
        "id": "social_tiktok_link",
        "label": "TikTok"
      }
    ]
  }
]

