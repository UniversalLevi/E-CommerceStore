<section class="testimonials section" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="section-header reveal">
      {%- if section.settings.heading != blank -%}
        <h2 class="section-header__title h2">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.subheading != blank -%}
        <p class="section-header__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}
    </div>

    <div class="testimonials__grid">
      {%- for block in section.blocks -%}
        <div class="testimonials__item card reveal" style="animation-delay: {{ forloop.index | times: 100 }}ms" {{ block.shopify_attributes }}>
          <div class="testimonials__rating">
            {%- for i in (1..5) -%}
              <svg class="testimonials__star {% if i <= block.settings.rating %}testimonials__star--filled{% endif %}" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            {%- endfor -%}
          </div>

          {%- if block.settings.content != blank -%}
            <blockquote class="testimonials__content">
              "{{ block.settings.content }}"
            </blockquote>
          {%- endif -%}

          <div class="testimonials__author">
            {%- if block.settings.author_image != blank -%}
              <img
                src="{{ block.settings.author_image | image_url: width: 100 }}"
                alt="{{ block.settings.author_name }}"
                class="testimonials__avatar"
                width="48"
                height="48"
                loading="lazy"
              >
            {%- else -%}
              <div class="testimonials__avatar testimonials__avatar--placeholder">
                {{ block.settings.author_name | slice: 0 | upcase }}
              </div>
            {%- endif -%}
            <div class="testimonials__author-info">
              {%- if block.settings.author_name != blank -%}
                <span class="testimonials__author-name">{{ block.settings.author_name }}</span>
              {%- endif -%}
              {%- if block.settings.author_title != blank -%}
                <span class="testimonials__author-title">{{ block.settings.author_title }}</span>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .testimonials {
    background-color: rgb(var(--color-base-background-2));
  }

  .testimonials__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media screen and (min-width: 750px) {
    .testimonials__grid {
      grid-template-columns: repeat({{ section.settings.columns }}, 1fr);
      gap: 2rem;
    }
  }

  .testimonials__item {
    background: rgb(var(--color-base-background-1));
    padding: 2rem;
    border-radius: var(--radius-lg, 16px);
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    transition: all 0.3s ease;
  }

  .testimonials__item:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .testimonials__rating {
    display: flex;
    gap: 0.25rem;
  }

  .testimonials__star {
    color: rgba(var(--color-base-text), 0.2);
    transition: color 0.3s ease;
  }

  .testimonials__star--filled {
    color: #FBBF24;
  }

  .testimonials__content {
    margin: 0;
    font-size: 1rem;
    line-height: 1.7;
    color: rgb(var(--color-base-text));
    font-style: italic;
    flex-grow: 1;
  }

  .testimonials__author {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(var(--color-base-text), 0.1);
  }

  .testimonials__avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }

  .testimonials__avatar--placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgb(var(--color-base-accent-1));
    color: rgb(var(--color-base-solid-button-labels));
    font-weight: 700;
    font-size: 1.25rem;
  }

  .testimonials__author-info {
    display: flex;
    flex-direction: column;
  }

  .testimonials__author-name {
    font-weight: 600;
    font-size: 0.9rem;
    color: rgb(var(--color-base-text));
  }

  .testimonials__author-title {
    font-size: 0.8rem;
    opacity: 0.6;
  }
</style>

