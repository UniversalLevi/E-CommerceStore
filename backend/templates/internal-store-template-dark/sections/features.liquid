<section class="features section" data-section-id="{{ section.id }}">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="section-header reveal">
        <h2 class="section-header__title h2">{{ section.settings.heading }}</h2>
        {%- if section.settings.subheading != blank -%}
          <p class="section-header__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="features__grid features__grid--{{ section.settings.layout }}">
      {%- for block in section.blocks -%}
        <div class="features__item reveal" style="animation-delay: {{ forloop.index | times: 100 }}ms" {{ block.shopify_attributes }}>
          <div class="features__icon-wrapper">
            {%- case block.settings.icon -%}
              {%- when 'truck' -%}
                <svg class="features__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M1 3h15v13H1zM16 8h4l3 3v5h-7V8z"/>
                  <circle cx="5.5" cy="18.5" r="2.5"/>
                  <circle cx="18.5" cy="18.5" r="2.5"/>
                </svg>
              {%- when 'shield' -%}
                <svg class="features__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                  <path d="M9 12l2 2 4-4"/>
                </svg>
              {%- when 'refresh' -%}
                <svg class="features__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M23 4v6h-6M1 20v-6h6"/>
                  <path d="M3.51 9a9 9 0 0114.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0020.49 15"/>
                </svg>
              {%- when 'headphones' -%}
                <svg class="features__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M3 18v-6a9 9 0 0118 0v6"/>
                  <path d="M21 19a2 2 0 01-2 2h-1a2 2 0 01-2-2v-3a2 2 0 012-2h3v5zM3 19a2 2 0 002 2h1a2 2 0 002-2v-3a2 2 0 00-2-2H3v5z"/>
                </svg>
              {%- when 'star' -%}
                <svg class="features__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              {%- when 'heart' -%}
                <svg class="features__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"/>
                </svg>
              {%- when 'package' -%}
                <svg class="features__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M16.5 9.4l-9-5.19M21 16V8a2 2 0 00-1-1.73l-7-4a2 2 0 00-2 0l-7 4A2 2 0 003 8v8a2 2 0 001 1.73l7 4a2 2 0 002 0l7-4A2 2 0 0021 16z"/>
                  <path d="M3.27 6.96L12 12.01l8.73-5.05M12 22.08V12"/>
                </svg>
              {%- when 'gift' -%}
                <svg class="features__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M20 12v10H4V12M2 7h20v5H2zM12 22V7M12 7H7.5a2.5 2.5 0 010-5C11 2 12 7 12 7zM12 7h4.5a2.5 2.5 0 000-5C13 2 12 7 12 7z"/>
                </svg>
              {%- when 'check' -%}
                <svg class="features__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M22 11.08V12a10 10 0 11-5.93-9.14"/>
                  <path d="M22 4L12 14.01l-3-3"/>
                </svg>
              {%- when 'leaf' -%}
                <svg class="features__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M11 20A7 7 0 014 13V4a1 1 0 011-1h7.5a9.5 9.5 0 019.5 9.5 9.5 9.5 0 01-9.5 9.5H11z"/>
                  <path d="M8 16l4-4"/>
                </svg>
              {%- when 'clock' -%}
                <svg class="features__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M12 6v6l4 2"/>
                </svg>
              {%- when 'percent' -%}
                <svg class="features__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <line x1="19" y1="5" x2="5" y2="19"/>
                  <circle cx="6.5" cy="6.5" r="2.5"/>
                  <circle cx="17.5" cy="17.5" r="2.5"/>
                </svg>
              {%- else -%}
                <svg class="features__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M12 6v6l4 2"/>
                </svg>
            {%- endcase -%}
          </div>
          
          <div class="features__content">
            {%- if block.settings.title != blank -%}
              <h3 class="features__title">{{ block.settings.title }}</h3>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <p class="features__description">{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .features {
    background-color: rgb(var(--color-base-background-1));
  }

  .features__grid {
    display: grid;
    gap: 2rem;
  }

  .features__grid--horizontal {
    grid-template-columns: repeat(2, 1fr);
  }

  .features__grid--vertical {
    grid-template-columns: 1fr;
  }

  @media screen and (min-width: 750px) {
    .features__grid--horizontal {
      grid-template-columns: repeat(4, 1fr);
    }

    .features__grid--vertical {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .features__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1rem;
    padding: 2rem 1.5rem;
    background: rgb(var(--color-base-background-2));
    border-radius: var(--radius-lg, 16px);
    transition: all 0.3s ease;
  }

  .features__grid--vertical .features__item {
    flex-direction: row;
    text-align: left;
    padding: 2rem;
  }

  .features__item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  }

  .features__icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: rgba(var(--color-base-accent-1), 0.1);
    border-radius: 50%;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .features__item:hover .features__icon-wrapper {
    background: rgb(var(--color-base-accent-1));
  }

  .features__icon {
    width: 28px;
    height: 28px;
    color: rgb(var(--color-base-accent-1));
    transition: color 0.3s ease;
  }

  .features__item:hover .features__icon {
    color: rgb(var(--color-base-solid-button-labels));
  }

  .features__content {
    flex-grow: 1;
  }

  .features__title {
    margin: 0 0 0.5rem;
    font-size: 1.1rem;
    font-weight: 600;
    color: rgb(var(--color-base-text));
  }

  .features__description {
    margin: 0;
    font-size: 0.9rem;
    opacity: 0.7;
    line-height: 1.5;
  }

  /* Alternate compact style */
  .features--compact .features__item {
    padding: 1.5rem;
  }

  .features--compact .features__icon-wrapper {
    width: 48px;
    height: 48px;
  }

  .features--compact .features__icon {
    width: 22px;
    height: 22px;
  }

  .features--compact .features__title {
    font-size: 0.95rem;
  }

  .features--compact .features__description {
    font-size: 0.8rem;
  }
</style>

{% schema %}
{
  "name": "Features / Trust Badges",
  "tag": "section",
  "class": "section-features",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose Us"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "horizontal", "label": "Horizontal (4 columns)" },
        { "value": "vertical", "label": "Vertical (2 columns with description)" }
