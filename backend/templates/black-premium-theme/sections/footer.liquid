<footer class="footer" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="footer__content">
      <div class="footer__blocks">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'link_list' -%}
              <div class="footer__block footer__block--menu" {{ block.shopify_attributes }}>
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.menu != blank -%}
                  <ul class="footer__menu list-unstyled">
                    {%- for link in block.settings.menu.links -%}
                      <li>
                        <a href="{{ link.url }}" class="footer__menu-link">{{ link.title }}</a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </div>
            {%- when 'text' -%}
              <div class="footer__block footer__block--text" {{ block.shopify_attributes }}>
                {%- if block.settings.heading != blank -%}
                  <h3 class="footer__heading">{{ block.settings.heading }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <div class="footer__text rte">{{ block.settings.text }}</div>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>

      <div class="footer__bottom">
        <div class="footer__copyright">
          <span>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}</span>
          <span>{{ powered_by_link }}</span>
        </div>

        {%- if section.settings.payment_enable -%}
          <div class="footer__payment">
            <span class="visually-hidden">Payment methods</span>
            <ul class="footer__payment-list list-unstyled" role="list">
              {%- for type in shop.enabled_payment_types -%}
                <li class="footer__payment-item">
                  {{ type | payment_type_svg_tag: class: 'icon icon--payment' }}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 4rem 0 2rem;
    background-color: rgb(var(--color-base-background-2));
    color: rgb(var(--color-base-text));
  }

  .footer__blocks {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .footer__heading {
    margin: 0 0 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer__menu {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .footer__menu li {
    margin-bottom: 0.5rem;
  }

  .footer__menu-link {
    color: rgb(var(--color-base-text));
    text-decoration: none;
    font-size: 0.875rem;
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  .footer__menu-link:hover {
    opacity: 1;
  }

  .footer__text {
    font-size: 0.875rem;
    opacity: 0.8;
    line-height: 1.6;
  }

  .footer__bottom {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(var(--color-base-text), 0.1);
  }

  .footer__copyright {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    font-size: 0.75rem;
    opacity: 0.6;
  }

  .footer__payment-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .footer__payment-item .icon--payment {
    width: 38px;
    height: 24px;
  }

  @media screen and (max-width: 749px) {
    .footer__bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "payment_enable",
      "default": true,
      "label": "Show payment icons"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quick links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "default": "footer",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "About us"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Use this text area to tell your customers about your brand.</p>"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      { "type": "link_list" },
      { "type": "text" }
    ]
  }
}
{% endschema %}

