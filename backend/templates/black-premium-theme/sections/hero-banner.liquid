<section class="hero-banner" data-section-id="{{ section.id }}">
  <div class="hero-banner__wrapper">
    {%- if section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        alt="{{ section.settings.image.alt | default: section.settings.heading }}"
        class="hero-banner__image"
        loading="eager"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
      >
    {%- else -%}
      <div class="hero-banner__placeholder">
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
      </div>
    {%- endif -%}

    <div class="hero-banner__content page-width">
      <div class="hero-banner__text-wrapper">
        {%- if section.settings.heading != blank -%}
          <h1 class="hero-banner__heading h0">
            {{ section.settings.heading }}
          </h1>
        {%- else -%}
          <h1 class="hero-banner__heading h0">
            Welcome to {{ shop.name }}
          </h1>
        {%- endif -%}

        {%- if section.settings.subheading != blank -%}
          <p class="hero-banner__subheading">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <a
            href="{{ section.settings.button_link }}"
            class="hero-banner__button button"
          >
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .hero-banner {
    position: relative;
    min-height: {{ section.settings.height }}vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-banner__wrapper {
    position: absolute;
    inset: 0;
  }

  .hero-banner__image,
  .hero-banner__placeholder {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-banner__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(var(--color-base-text), 0.05);
  }

  .hero-banner__placeholder svg {
    width: 100%;
    height: 100%;
    opacity: 0.2;
  }

  .hero-banner__content {
    position: relative;
    z-index: 2;
    text-align: {{ section.settings.text_alignment }};
    color: {{ section.settings.text_color }};
  }

  .hero-banner__text-wrapper {
    max-width: 650px;
    {% if section.settings.text_alignment == 'center' %}
      margin: 0 auto;
    {% elsif section.settings.text_alignment == 'right' %}
      margin-left: auto;
    {% endif %}
  }

  .hero-banner__heading {
    margin: 0 0 1rem;
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: var(--font-heading-weight);
    line-height: 1.1;
  }

  .hero-banner__subheading {
    margin: 0 0 2rem;
    font-size: clamp(1rem, 2vw, 1.25rem);
    opacity: 0.9;
  }

  .hero-banner__button {
    display: inline-block;
    padding: 1rem 2.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgb(var(--color-base-solid-button-labels));
    background-color: rgb(var(--color-base-accent-1));
    border: none;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .hero-banner__button:hover {
    opacity: 0.9;
  }

  /* Overlay for better text readability */
  .hero-banner__wrapper::after {
    content: '';
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }
</style>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "range",
      "id": "height",
      "min": 40,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Section height",
      "default": 70
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 30
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our collection of premium products"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center",
      "label": "Text alignment"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

