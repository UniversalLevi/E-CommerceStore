<section class="featured-products" data-section-id="{{ section.id }}">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <div class="section-header">
        <h2 class="section-header__title h2">{{ section.settings.heading }}</h2>
        {%- if section.settings.subheading != blank -%}
          <p class="section-header__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="featured-products__grid">
      {%- liquid
        if section.settings.collection != blank
          assign products_to_show = section.settings.collection.products
        else
          assign products_to_show = collections.all.products
        endif
        assign products_count = section.settings.products_to_show | default: 8
      -%}

      {%- if products_to_show.size > 0 -%}
        {%- for product in products_to_show limit: products_count -%}
          <div class="featured-products__item">
            <a href="{{ product.url }}" class="product-card">
              <div class="product-card__image-wrapper">
                {%- if product.featured_image != blank -%}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | default: product.title }}"
                    class="product-card__image"
                    loading="lazy"
                    width="300"
                    height="400"
                  >
                  {%- if product.images[1] != blank and section.settings.show_secondary_image -%}
                    <img
                      src="{{ product.images[1] | image_url: width: 600 }}"
                      alt="{{ product.images[1].alt | default: product.title }}"
                      class="product-card__image product-card__image--secondary"
                      loading="lazy"
                      width="300"
                      height="400"
                    >
                  {%- endif -%}
                {%- else -%}
                  <div class="product-card__placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {%- endif -%}

                {%- if product.available == false -%}
                  <span class="product-card__badge product-card__badge--sold-out">Sold out</span>
                {%- elsif product.compare_at_price > product.price -%}
                  <span class="product-card__badge product-card__badge--sale">Sale</span>
                {%- endif -%}
              </div>

              <div class="product-card__info">
                <h3 class="product-card__title">{{ product.title }}</h3>
                
                {%- if section.settings.show_vendor -%}
                  <p class="product-card__vendor">{{ product.vendor }}</p>
                {%- endif -%}

                <div class="product-card__price">
                  {%- if product.compare_at_price > product.price -%}
                    <span class="product-card__price--compare">{{ product.compare_at_price | money }}</span>
                  {%- endif -%}
                  <span class="product-card__price--current{% if product.compare_at_price > product.price %} product-card__price--sale{% endif %}">
                    {{ product.price | money }}
                  </span>
                </div>
              </div>
            </a>
          </div>
        {%- endfor -%}
      {%- else -%}
        <div class="featured-products__empty">
          <p>No products found. Add products to your store to see them here.</p>
        </div>
      {%- endif -%}
    </div>

    {%- if section.settings.show_view_all -%}
      <div class="section-footer">
        <a href="{{ section.settings.collection.url | default: routes.all_products_collection_url }}" class="button button--secondary">
          {{ section.settings.view_all_text | default: 'View all products' }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .featured-products {
    padding: var(--spacing-sections-mobile) 0;
  }

  @media screen and (min-width: 750px) {
    .featured-products {
      padding: var(--spacing-sections-desktop) 0;
    }
  }

  .section-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .section-header__title {
    margin: 0 0 0.5rem;
    font-size: clamp(1.5rem, 3vw, 2rem);
  }

  .section-header__subheading {
    margin: 0;
    opacity: 0.7;
  }

  .featured-products__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  @media screen and (min-width: 750px) {
    .featured-products__grid {
      grid-template-columns: repeat({{ section.settings.columns | default: 4 }}, 1fr);
      gap: 2rem;
    }
  }

  .product-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .product-card__image-wrapper {
    position: relative;
    aspect-ratio: 3/4;
    overflow: hidden;
    background-color: rgba(var(--color-base-text), 0.03);
    margin-bottom: 1rem;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .product-card__image--secondary {
    position: absolute;
    inset: 0;
    opacity: 0;
  }

  .product-card:hover .product-card__image--secondary {
    opacity: 1;
  }

  .product-card:hover .product-card__image:not(.product-card__image--secondary) {
    opacity: 0;
  }

  .product-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-card__placeholder svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .product-card__badge {
    position: absolute;
    top: 0.75rem;
    left: 0.75rem;
    padding: 0.25rem 0.75rem;
    font-size: 0.625rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .product-card__badge--sold-out {
    background-color: rgb(var(--color-base-text));
    color: rgb(var(--color-base-background-1));
  }

  .product-card__badge--sale {
    background-color: #dc2626;
    color: #fff;
  }

  .product-card__info {
    text-align: {{ section.settings.content_alignment | default: 'left' }};
  }

  .product-card__title {
    margin: 0 0 0.25rem;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .product-card__vendor {
    margin: 0 0 0.5rem;
    font-size: 0.75rem;
    opacity: 0.6;
  }

  .product-card__price {
    font-size: 0.875rem;
  }

  .product-card__price--compare {
    text-decoration: line-through;
    opacity: 0.5;
    margin-right: 0.5rem;
  }

  .product-card__price--sale {
    color: #dc2626;
  }

  .featured-products__empty {
    grid-column: 1 / -1;
    text-align: center;
    padding: 3rem;
    background-color: rgba(var(--color-base-text), 0.03);
  }

  .section-footer {
    text-align: center;
    margin-top: 2rem;
  }

  .button--secondary {
    display: inline-block;
    padding: 1rem 2rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: rgb(var(--color-base-text));
    background-color: transparent;
    border: 1px solid rgb(var(--color-base-text));
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .button--secondary:hover {
    color: rgb(var(--color-base-background-1));
    background-color: rgb(var(--color-base-text));
  }
</style>

{% schema %}
{
  "name": "Featured Products",
  "tag": "section",
  "class": "section-featured-products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 24,
      "step": 1,
      "default": 8,
      "label": "Products to show"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Columns on desktop"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": true,
      "label": "Show second image on hover"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show vendor"
    },
    {
      "type": "select",
      "id": "content_alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "left",
      "label": "Content alignment"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View all' button"
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View all button text",
      "default": "View all products"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}

