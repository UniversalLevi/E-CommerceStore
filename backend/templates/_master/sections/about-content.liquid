<section class="about-content section" data-section-id="{{ section.id }}">
  <div class="page-width">
    <div class="about-content__grid">
      <div class="about-content__text reveal-left">
        {%- if section.settings.subtitle != blank -%}
          <span class="about-content__subtitle">{{ section.settings.subtitle }}</span>
        {%- endif -%}
        
        {%- if section.settings.heading != blank -%}
          <h1 class="about-content__heading h1">{{ section.settings.heading }}</h1>
        {%- endif -%}
        
        {%- if section.settings.content != blank -%}
          <div class="about-content__description rte">
            {{ section.settings.content }}
          </div>
        {%- endif -%}
        
        {%- if section.settings.show_stats -%}
          <div class="about-content__stats">
            {%- for block in section.blocks -%}
              {%- if block.type == 'stat' -%}
                <div class="about-content__stat" {{ block.shopify_attributes }}>
                  <span class="about-content__stat-number">{{ block.settings.number }}</span>
                  <span class="about-content__stat-label">{{ block.settings.label }}</span>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        {%- endif -%}
        
        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="about-content__button button">
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>
      
      <div class="about-content__media reveal-right">
        {%- if section.settings.image != blank -%}
          <div class="about-content__image-wrapper">
            <img
              src="{{ section.settings.image | image_url: width: 800 }}"
              alt="{{ section.settings.image.alt | default: section.settings.heading }}"
              class="about-content__image"
              loading="lazy"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
            >
          </div>
        {%- else -%}
          <div class="about-content__image-placeholder">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {%- endif -%}
        
        {%- if section.settings.show_badge -%}
          <div class="about-content__badge animate-float">
            <span class="about-content__badge-number">{{ section.settings.badge_number }}</span>
            <span class="about-content__badge-text">{{ section.settings.badge_text }}</span>
          </div>
        {%- endif -%}
      </div>
    </div>

    {%- if section.settings.show_values -%}
      <div class="about-content__values">
        <h2 class="about-content__values-heading h2 reveal">{{ section.settings.values_heading | default: 'Our Values' }}</h2>
        <div class="about-content__values-grid">
          {%- for block in section.blocks -%}
            {%- if block.type == 'value' -%}
              <div class="about-content__value reveal" style="animation-delay: {{ forloop.index | times: 100 }}ms" {{ block.shopify_attributes }}>
                <div class="about-content__value-icon">
                  {%- case block.settings.icon -%}
                    {%- when 'heart' -%}
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z"/>
                      </svg>
                    {%- when 'star' -%}
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    {%- when 'users' -%}
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/>
                        <circle cx="9" cy="7" r="4"/>
                        <path d="M23 21v-2a4 4 0 00-3-3.87M16 3.13a4 4 0 010 7.75"/>
                      </svg>
                    {%- when 'leaf' -%}
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <path d="M11 20A7 7 0 014 13V4a1 1 0 011-1h7.5a9.5 9.5 0 019.5 9.5 9.5 9.5 0 01-9.5 9.5H11z"/>
                        <path d="M8 16l4-4"/>
                      </svg>
                    {%- else -%}
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <circle cx="12" cy="12" r="10"/>
                      </svg>
                  {%- endcase -%}
                </div>
                <h3 class="about-content__value-title">{{ block.settings.title }}</h3>
                <p class="about-content__value-description">{{ block.settings.description }}</p>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .about-content {
    padding: var(--spacing-sections-desktop, 80px) 0;
  }

  .about-content__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
  }

  @media screen and (min-width: 990px) {
    .about-content__grid {
      grid-template-columns: 1fr 1fr;
      gap: 5rem;
    }
  }

  .about-content__subtitle {
    display: inline-block;
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: rgb(var(--color-base-accent-1));
    margin-bottom: 1rem;
  }

  .about-content__heading {
    margin: 0 0 1.5rem;
    font-size: clamp(2rem, 4vw, 3rem);
  }

  .about-content__description {
    font-size: 1.1rem;
    line-height: 1.8;
    opacity: 0.85;
    margin-bottom: 2rem;
  }

  .about-content__stats {
    display: flex;
    gap: 3rem;
    margin-bottom: 2rem;
    padding: 1.5rem 0;
    border-top: 1px solid rgba(var(--color-base-text), 0.1);
    border-bottom: 1px solid rgba(var(--color-base-text), 0.1);
  }

  .about-content__stat {
    display: flex;
    flex-direction: column;
  }

  .about-content__stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: rgb(var(--color-base-accent-1));
    line-height: 1;
  }

  .about-content__stat-label {
    font-size: 0.9rem;
    opacity: 0.7;
    margin-top: 0.5rem;
  }

  .about-content__media {
    position: relative;
  }

  .about-content__image-wrapper {
    position: relative;
    border-radius: var(--radius-lg, 16px);
    overflow: hidden;
  }

  .about-content__image {
    width: 100%;
    height: auto;
    display: block;
  }

  .about-content__image-placeholder {
    aspect-ratio: 4/3;
    background: rgba(var(--color-base-text), 0.05);
    border-radius: var(--radius-lg, 16px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .about-content__image-placeholder svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  .about-content__badge {
    position: absolute;
    bottom: -20px;
    left: -20px;
    background: rgb(var(--color-base-accent-1));
    color: rgb(var(--color-base-solid-button-labels));
    padding: 1.5rem;
    border-radius: var(--radius-lg, 16px);
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  @media screen and (min-width: 990px) {
    .about-content__badge {
      bottom: 30px;
      left: -30px;
    }
  }

  .about-content__badge-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1;
  }

  .about-content__badge-text {
    display: block;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-top: 0.25rem;
  }

  /* Values Section */
  .about-content__values {
    margin-top: 5rem;
    padding-top: 5rem;
    border-top: 1px solid rgba(var(--color-base-text), 0.1);
  }

  .about-content__values-heading {
    text-align: center;
    margin-bottom: 3rem;
  }

  .about-content__values-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  @media screen and (min-width: 750px) {
    .about-content__values-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .about-content__value {
    text-align: center;
    padding: 2rem 1.5rem;
    background: rgb(var(--color-base-background-2));
    border-radius: var(--radius-lg, 16px);
    transition: all 0.3s ease;
  }

  .about-content__value:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
  }

  .about-content__value-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto 1rem;
    color: rgb(var(--color-base-accent-1));
  }

  .about-content__value-icon svg {
    width: 100%;
    height: 100%;
  }

  .about-content__value-title {
    margin: 0 0 0.5rem;
    font-size: 1rem;
    font-weight: 600;
  }

  .about-content__value-description {
    margin: 0;
    font-size: 0.85rem;
    opacity: 0.7;
    line-height: 1.5;
  }
</style>

{% schema %}
{
  "name": "About Content",
  "tag": "section",
  "class": "section-about-content",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "About Us"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Story"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>We are passionate about bringing you the best products at great prices. Our journey started with a simple idea: make quality accessible to everyone.</p><p>Today, we serve thousands of happy customers and continue to grow with your support.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "checkbox",
      "id": "show_stats",
      "label": "Show statistics",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show floating badge",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_number",
      "label": "Badge number",
      "default": "5+"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Years Experience"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    },
    {
      "type": "checkbox",
      "id": "show_values",
      "label": "Show values section",
      "default": true
    },
    {
      "type": "text",
      "id": "values_heading",
      "label": "Values heading",
      "default": "Our Values"
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistic",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "10K+"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Happy Customers"
        }
      ]
    },
    {
      "type": "value",
      "name": "Value",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "heart", "label": "Heart" },
            { "value": "star", "label": "Star" },
            { "value": "users", "label": "Users" },
            { "value": "leaf", "label": "Leaf" }
          ],
          "default": "heart"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Quality First"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "We never compromise on quality"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Content",
      "blocks": [
        { "type": "stat", "settings": { "number": "10K+", "label": "Happy Customers" } },
        { "type": "stat", "settings": { "number": "500+", "label": "Products" } },
        { "type": "stat", "settings": { "number": "5+", "label": "Years" } },
        { "type": "value", "settings": { "icon": "heart", "title": "Quality First", "description": "We never compromise on quality" } },
        { "type": "value", "settings": { "icon": "star", "title": "Customer Focus", "description": "Your satisfaction is our priority" } },
        { "type": "value", "settings": { "icon": "users", "title": "Community", "description": "Building lasting relationships" } },
        { "type": "value", "settings": { "icon": "leaf", "title": "Sustainability", "description": "Eco-friendly practices" } }
      ]
    }
  ]
}
{% endschema %}

