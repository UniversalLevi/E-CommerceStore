<section class="newsletter section" data-section-id="{{ section.id }}">
  <div class="newsletter__wrapper">
    {%- if section.settings.show_background_image and section.settings.background_image != blank -%}
      <img
        src="{{ section.settings.background_image | image_url: width: 1920 }}"
        alt=""
        class="newsletter__bg-image"
        loading="lazy"
      >
    {%- endif -%}
    
    <div class="newsletter__overlay"></div>
    
    <div class="page-width">
      <div class="newsletter__content reveal">
        {%- if section.settings.heading != blank -%}
          <h2 class="newsletter__heading h1">{{ section.settings.heading }}</h2>
        {%- endif -%}
        
        {%- if section.settings.subheading != blank -%}
          <p class="newsletter__subheading">{{ section.settings.subheading }}</p>
        {%- endif -%}
        
        <form class="newsletter__form" action="{{ routes.root_url }}" method="post">
          <input type="hidden" name="form_type" value="customer">
          <input type="hidden" name="utf8" value="âœ“">
          
          <div class="newsletter__form-wrapper">
            <div class="newsletter__input-wrapper">
              <input
                type="email"
                name="contact[email]"
                class="newsletter__input"
                placeholder="{{ section.settings.placeholder | default: 'Enter your email address' }}"
                required
                autocomplete="email"
              >
            </div>
            <button type="submit" class="newsletter__button button">
              {{ section.settings.button_text | default: 'Subscribe' }}
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </button>
          </div>
          
          {%- if section.settings.show_privacy_text -%}
            <p class="newsletter__privacy">
              {{ section.settings.privacy_text | default: 'By subscribing, you agree to receive marketing emails. Unsubscribe anytime.' }}
            </p>
          {%- endif -%}
        </form>
        
        {%- if section.settings.show_benefits -%}
          <div class="newsletter__benefits">
            {%- for block in section.blocks -%}
              <div class="newsletter__benefit" {{ block.shopify_attributes }}>
                <svg class="newsletter__benefit-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 6L9 17l-5-5"/>
                </svg>
                <span>{{ block.settings.text }}</span>
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .newsletter {
    padding: 0;
  }

  .newsletter__wrapper {
    position: relative;
    padding: 5rem 0;
    background-color: rgb(var(--color-base-accent-1));
    overflow: hidden;
  }

  .newsletter__bg-image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .newsletter__overlay {
    position: absolute;
    inset: 0;
    background: rgba(var(--color-base-accent-1), 0.9);
  }

  .newsletter__content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    color: rgb(var(--color-base-solid-button-labels));
  }

  .newsletter__heading {
    margin: 0 0 1rem;
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    color: inherit;
  }

  .newsletter__subheading {
    margin: 0 0 2rem;
    font-size: 1.1rem;
    opacity: 0.9;
  }

  .newsletter__form-wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 500px;
    margin: 0 auto;
  }

  @media screen and (min-width: 750px) {
    .newsletter__form-wrapper {
      flex-direction: row;
    }
  }

  .newsletter__input-wrapper {
    flex-grow: 1;
  }

  .newsletter__input {
    width: 100%;
    padding: 1rem 1.5rem;
    font-size: 1rem;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: var(--radius-base, 8px);
    background: rgba(255, 255, 255, 0.1);
    color: inherit;
    transition: all 0.3s ease;
  }

  .newsletter__input::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }

  .newsletter__input:focus {
    outline: none;
    border-color: rgba(255, 255, 255, 0.6);
    background: rgba(255, 255, 255, 0.15);
  }

  .newsletter__button {
    background: rgb(var(--color-base-background-1));
    color: rgb(var(--color-base-accent-1));
    border-color: transparent;
    white-space: nowrap;
    flex-shrink: 0;
  }

  .newsletter__button:hover {
    background: rgb(var(--color-base-text));
    color: rgb(var(--color-base-background-1));
  }

  .newsletter__button svg {
    transition: transform 0.3s ease;
  }

  .newsletter__button:hover svg {
    transform: translateX(4px);
  }

  .newsletter__privacy {
    margin: 1.5rem 0 0;
    font-size: 0.8rem;
    opacity: 0.7;
  }

  .newsletter__benefits {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }

  .newsletter__benefit {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
  }

  .newsletter__benefit-icon {
    flex-shrink: 0;
    opacity: 0.8;
  }
</style>

{% schema %}
{
  "name": "Newsletter",
  "tag": "section",
  "class": "section-newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stay Updated"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Subscribe to our newsletter for exclusive deals and updates"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Input placeholder",
      "default": "Enter your email address"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Subscribe"
    },
    {
      "type": "checkbox",
      "id": "show_privacy_text",
      "label": "Show privacy text",
      "default": true
    },
    {
      "type": "textarea",
      "id": "privacy_text",
      "label": "Privacy text",
      "default": "By subscribing, you agree to receive marketing emails. Unsubscribe anytime."
    },
    {
      "type": "checkbox",
      "id": "show_background_image",
      "label": "Show background image",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "checkbox",
      "id": "show_benefits",
      "label": "Show benefits",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Benefit text",
          "default": "Exclusive discounts"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Newsletter",
      "blocks": [
        {
          "type": "benefit",
          "settings": {
            "text": "Exclusive discounts"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "text": "New arrival alerts"
          }
        },
        {
          "type": "benefit",
          "settings": {
            "text": "No spam, ever"
          }
        }
      ]
    }
  ]
}
{% endschema %}

